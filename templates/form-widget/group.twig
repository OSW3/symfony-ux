{# icon at start #}{% if icon is not empty and iconPosition == 'start' %}<span class="{{ classname('form-widget-group-text') }}"><twig:Component:Icon :type="iconType" :value="icon"/></span>{% endif %}
{% block controls %}{% endblock %}
{# icon at end #}{% if icon is not empty and iconPosition == 'end' %}<span class="{{ classname('form-widget-group-text') }}"><twig:Component:Icon :type="iconType" :value="icon"/></span>{% endif %}
{# group end #}{% if isGroup is not empty %}</div>{% endif %}
