{% extends '@SymfonyUx/form-widget/container.twig' %}

{% block widget %}
{% include "@SymfonyUx/form-widget/tag/label/tag.twig" with {
    id      : id,
    label   : label,
    ellipsis: labelEllipsis,
    hidden  : labelHidden,
    icon    : labelIcon,
    title   : labelTitle,
    required: required,
} only %}
{% embed "@SymfonyUx/form-widget/group.twig" with {
    isGroup     : isGroup,
    icon        : icon,
    iconPosition: iconPosition,
    iconType    : iconType,
} %}{% block controls %}

    {% include "@SymfonyUx/form-widget/tag/textarea/tag.twig" with {
        autocomplete: autocomplete,
        autofocus   : autofocus,
        class       : class,
        cols        : cols,
        dirname     : dirname,
        disabled    : disabled,
        form        : form,
        id          : id,
        maxlength   : maxlength,
        minlength   : minlength,
        name        : name,
        pattern     : pattern,
        placeholder : placeholder,
        readonly    : readonly,
        required    : required,
        rows        : rows,
        tabindex    : tabindex,
        title       : title,
        spellcheck  : spellcheck,
        value       : value,
        wrap        : wrap,
    } only %}
    
{% endblock controls %}{% endembed %}
{% include "@SymfonyUx/form-widget/tag/description/tag.twig" with {
    tag    : descriptionTag,
    icon   : descriptionIcon,
    id     : descriptionId,
    message: description,
} only %}
{% endblock widget %}