{% extends '@UxComponents/form-widget/container.twig' %}

{% block widget %}
{% embed "@UxComponents/form-widget/group.twig" with {
    isGroup     : isGroup,
    icon        : icon,
    iconPosition: iconPosition
} %}{% block controls %}
    {% include "@UxComponents/form-widget/tag/input/tag.twig" with {
        autofocus : autofocus,
        checked   : checked,
        class     : class,
        disabled  : disabled,
        form      : form,
        id        : id,
        name      : name,
        required  : required,
        tabindex  : tabindex,
        title     : title,
        spellcheck: true,
        type      : type,
        value     : value,
    } only %}
    {% include "@UxComponents/form-widget/tag/label/tag.twig" with {
        id      : id,
        label   : label,
        hidden  : labelHidden,
        icon    : labelIcon,
        required: required,
    } only %}
{% endblock controls %}{% endembed %}
{% include "@UxComponents/form-widget/tag/description/tag.twig" with {
    tag    : descriptionTag,
    icon   : descriptionIcon,
    id     : descriptionId,
    message: description,
} only %}
{% endblock widget %}