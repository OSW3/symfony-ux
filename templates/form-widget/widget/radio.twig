{% extends '@SymfonyUx/form-widget/container.twig' %}

{% block widget %}
{% embed "@SymfonyUx/form-widget/group.twig" with {
    isGroup     : isGroup,
    icon        : icon,
    iconPosition: iconPosition
} %}{% block controls %}
    {% include "@SymfonyUx/form-widget/tag/input/tag.twig" with {
        autofocus: autofocus,
        checked  : checked,
        class    : class,
        disabled : disabled,
        form     : form,
        id       : id,
        name     : name,
        required : required,
        tabindex : tabindex,
        title    : title,
        type     : type,
        value    : value,
    } only %}
    {% include "@SymfonyUx/form-widget/tag/label/tag.twig" with {
        id      : id,
        label   : label,
        hidden  : labelHidden,
        icon    : labelIcon,
        required: required,
    } only %}
{% endblock controls %}{% endembed %}
{% include "@SymfonyUx/form-widget/tag/description/tag.twig" with {
    tag    : descriptionTag,
    icon   : descriptionIcon,
    id     : descriptionId,
    message: description,
} only %}
{% endblock widget %}