{% extends '@SymfonyUx/form-widget/container.twig' %}

{% block widget %}
{% include "@SymfonyUx/form-widget/tag/label/tag.twig" with {
    id      : id,
    label   : label,
    ellipsis: labelEllipsis,
    hidden  : labelHidden,
    icon    : labelIcon,
    title   : labelTitle,
    required: required,
} only %}
{% embed "@SymfonyUx/form-widget/group.twig" with {
    isGroup     : isGroup,
    icon        : icon,
    iconPosition: iconPosition,
    iconType    : iconType,
} %}{% block controls %}
    {% include "@SymfonyUx/form-widget/tag/select/tag.twig" with {
        autofocus: autofocus,
        choices  : choices,
        class    : class,
        disabled : disabled,
        form     : form,
        id       : id,
        multiple : multiple,
        name     : name,
        required : required,
        selected : selected,
        size     : size,
        tabindex : tabindex,
        title    : title,
    } only %}
{% endblock controls %}{% endembed %}
{% include "@SymfonyUx/form-widget/tag/description/tag.twig" with {
    tag    : descriptionTag,
    icon   : descriptionIcon,
    id     : descriptionId,
    message: description,
} only %}
{% endblock widget %}