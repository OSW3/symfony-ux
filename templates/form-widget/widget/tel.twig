{% extends '@UxComponents/form-widget/container.twig' %}

{% block widget %}
{% include "@UxComponents/form-widget/tag/label/tag.twig" with {
    id      : id,
    label   : label,
    hidden  : labelHidden,
    icon    : labelIcon,
    required: required,
} only %}

{% embed "@UxComponents/form-widget/group.twig" with {
    isGroup     : phoneCode,
    icon        : icon,
    iconPosition: iconPosition
} %}{% block controls %}

    {% if phoneCode == true %}
    <twig:Ux:FormWidget:Choice 
        :label="null"
        :container="false"
        :choices="phoneCodeChoices"
    />
    {% endif %}
    {% include "@UxComponents/form-widget/tag/input/tag.twig" with {
        autocomplete: autocomplete,
        autofocus   : autofocus,
        class       : class,
        disabled    : disabled,
        form        : form,
        id          : id,
        maxlength   : maxlength,
        minlength   : minlength,
        name        : name,
        pattern     : pattern,
        placeholder : placeholder,
        readonly    : readonly,
        required    : required,
        tabindex    : tabindex,
        title       : title,
        spellcheck  : spellcheck,
        type        : type,
        value       : value,
    } only %}
    
{% endblock controls %}{% endembed %}
{% include "@UxComponents/form-widget/tag/description/tag.twig" with {
    tag    : descriptionTag,
    icon   : descriptionIcon,
    id     : descriptionId,
    message: description,
} only %}
{% endblock widget %}