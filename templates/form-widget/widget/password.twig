{% block widget %}
{% include "@UxComponents/form-widget/tag/label/tag.twig" with {
    id      : id,
    label   : label,
    hidden  : labelHidden,
    icon    : labelIcon,
    required: required,
} only %}
{% embed "@UxComponents/form-widget/group.twig" with {
    isGroup     : isGroup,
    icon        : icon,
    iconPosition: iconPosition
} %}{% block controls %}
    {% include "@UxComponents/form-widget/tag/input/tag.twig" with {
        autocomplete: autocomplete,
        autofocus   : autofocus,
        class       : class,
        dirname     : dirname,
        disabled    : disabled,
        form        : form,
        id          : id,
        maxlength   : maxlength,
        minlength   : minlength,
        name        : name,
        pattern     : pattern,
        placeholder : placeholder,
        readonly    : readonly,
        required    : required,
        tabindex    : tabindex,
        title       : title,
        type        : type,
        value       : value,
        spellcheck  : true,
    } only %}
{% endblock controls %}{% endembed %}
{% include "@UxComponents/form-widget/tag/description/tag.twig" with {
    tag    : descriptionTag,
    icon   : descriptionIcon,
    id     : descriptionId,
    message: description,
} only %}
{% endblock widget %}