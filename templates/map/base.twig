{% if provider == 'google' %}
    {% set template = '@SymfonyUx/map/google.html' %}
{% elseif provider == 'osm' or provider == 'open-street-map' %}
    {% set template = '@SymfonyUx/map/open-street-map.html' %}
{% elseif provider == 'map-box' %}
    {% set template = '@SymfonyUx/map/map-box.html' %}
{% elseif provider == 'here' %}
    {% set template = '@SymfonyUx/map/here.html' %}
{% elseif provider == 'bing' %}
    {% set template = '@SymfonyUx/map/bing.html' %}
{% elseif provider == 'tom-tom' %}
    {% set template = '@SymfonyUx/map/tom-tom.html' %}
{% elseif provider == 'maptiler' %}
    {% set template = '@SymfonyUx/map/maptiler.html' %}
{% else %}
    {% set template = '@SymfonyUx/map/base.html' %}
{% endif %}
{% extends template %}


