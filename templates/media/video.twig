{# - Component : video                          - #}
{# - Part : Base                                - #}
{# ---------------------------------------------- #}
{% extends '@SymfonyUx/media/video.html' %}


{# ---------------------------------------------- #}
{# ---------------------------------------------- #}
{% set _attr = attr|default({}) %}


{# -- Render component attributes --------------- #}
{# ---------------------------------------------- #}

{% set _attr = _add_attribute(_attr, 'id', id) %}
{% set _attr = _add_attribute(_attr, 'class', class) %}
{% set _attr = _add_attribute(_attr, 'controls', controls) %}
{% set _attr = _add_attribute(_attr, 'loop', loop) %}
{% set _attr = _add_attribute(_attr, 'autoplay', autoplay) %}
{% set _attr = _add_attribute(_attr, 'playsinline', playsinline) %}
{% set _attr = _add_attribute(_attr, 'preload', preload) %}
{% set _attr = _add_attribute(_attr, 'poster', poster) %}

{% for _property, _value in dataset %}
    {% set _attr = _add_attribute(_attr, _property, _value) %}
{% endfor %}


{# -- Render other attributes ------------------- #}
{# ---------------------------------------------- #}

{% for name, value in attributes %}
    {% set _attr = _add_attribute(_attr, name, value) %}
{% endfor %}
